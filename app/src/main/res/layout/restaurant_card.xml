<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/restaurant_card"
        card_view:cardBackgroundColor="#FFFF"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="10dp"
        android:clickable="true"
        android:orientation="vertical"
        style="@style/CardView.Light"
        android:elevation="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/restImage"
                android:src="@drawable/ic_profile"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="61dp">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/restName"
                    android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/restPrice"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="65dp">
            <TextView
                    android:text="TextView"
                    android:layout_width="266dp"
                    android:layout_height="42dp"
                    android:id="@+id/restAddress"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp" android:id="@+id/favBtn"
                    android:layout_weight="1"
                    android:background="@drawable/ic_favorite_shadow__24" android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>